#if !defined(PIDGIN_GLOBAL_HEADER_INSIDE) && !defined(PIDGIN_COMPILATION)
# error "only <pidgin.h> may be included directly"
#endif

#ifndef PIDGIN_VERSION_CONSTS_H
#define PIDGIN_VERSION_CONSTS_H

/**
 * PIDGIN_MAJOR_VERSION:
 *
 * The major version of the running Pidgin.
 */
#define PIDGIN_MAJOR_VERSION (@PURPLE_MAJOR_VERSION@)

/**
 * PIDGIN_MINOR_VERSION:
 *
 * The minor version of the running Pidgin.
 */
#define PIDGIN_MINOR_VERSION (@PURPLE_MINOR_VERSION@)

/**
 * PIDGIN_MICRO_VERSION:
 *
 * The micro version of the running Pidgin.
 */
#define PIDGIN_MICRO_VERSION (@PURPLE_MICRO_VERSION@)

/**
 * PIDGIN_EXTRA_VERSION:
 *
 * The "extra" part of the version number if anything.  Typical values are
 * "devel", "beta1", "rc2", etc.
 */
#define PIDGIN_EXTRA_VERSION ("@PURPLE_EXTRA_VERSION@")

/**
 * PIDGIN_VERSION
 *
 * The entire version as a string.
 */
#define PIDGIN_VERSION ("@PURPLE_VERSION@")

#endif /* PIDGIN_VERSION_CONSTS_H */
