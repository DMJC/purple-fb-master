<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>im.pidgin.Pidgin3</id>

  <name>Pidgin</name>
  <summary>Universal chat client</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0-or-later</project_license>

  <project_group>Instant Messaging Freedom</project_group>
  <developer id="pidgin.im">
    <name>The Pidgin Team</name>
  </developer>

  <translation type="gettext">pidgin</translation>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <recommends>
    <internet>always</internet>
  </recommends>

  <provides>
    <binary>pidgin3</binary>
  </provides>

  <description>
    <p>
      Pidgin is a chat client that puts all chat networks into a single user interface which means you can focus on talking with your friends instead of figuring out where to talk to them.
    </p>
  </description>

  <branding>
    <color type="primary" scheme_preference="light">#794a85</color>
    <color type="primary" scheme_preference="dark">#e15694</color>
  </branding>

  <keywords>
    <keyword translate="no">Bonjour</keyword>
    <keyword translate="no">IRC</keyword>
    <keyword translate="no">IRCv3</keyword>
    <keyword translate="no">Jabber</keyword>
    <keyword translate="no">XMPP</keyword>
    <keyword>chat</keyword>
    <keyword>direct message</keyword>
    <keyword>dm</keyword>
    <keyword>group dm</keyword>
    <keyword>instant message</keyword>
    <keyword>instant messaging</keyword>
    <keyword>message</keyword>
    <keyword>messaging</keyword>
  </keywords>

  <!-- See https://specifications.freedesktop.org/menu-spec/latest/apa.html for
       a list of categories.
    -->
  <categories>
    <category>AudioVideo</category>
    <category>Chat</category>
    <category>GTK</category>
    <category>InstantMessaging</category>
    <category>IRCClient</category>
    <category>Network</category>
    <category>VideoConference</category>
  </categories>

  <launchable type="desktop-id">im.pidgin.Pidgin3.desktop</launchable>

